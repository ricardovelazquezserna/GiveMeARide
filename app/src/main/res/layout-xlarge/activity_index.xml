<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricardo.expoingenieria.IndexActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bowerlogo"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Iniciar SesiÃ³n"
                android:id="@+id/index_login_button"
                android:background="#ffbf3b"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:onClick="login"
                android:textSize="24dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Registrarse"
                android:id="@+id/index_signup_button"
                android:layout_gravity="center_horizontal"
                android:background="#e2413e"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:onClick="signup"
                android:textSize="24dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
